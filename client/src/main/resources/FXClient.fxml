<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientController">
   <children>
      <VBox spacing="10.0" VBox.vgrow="SOMETIMES">
         <children>
            <Label text="Host" />
            <TextField fx:id="tfHost" text="localhost" />
            <Label text="Port" />
            <TextField fx:id="tfPort" text="8189" />
            <HBox spacing="4.0">
               <children>
                  <Button fx:id="btnConnect" mnemonicParsing="false" onAction="#connect" text="Connect" />
                  <Button fx:id="btnDisconnect" mnemonicParsing="false" onAction="#disconnect" text="Disconnect" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
      <Separator prefWidth="200.0" />
      <VBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Message To Send" />
            <TextField fx:id="tfSend" />
            <Button fx:id="btnSend" mnemonicParsing="false" onAction="#send" text="Send" />
            <Label text="Message Received" />
            <TextField fx:id="tfReceive" editable="false" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
      <Separator prefWidth="200.0" />
      <VBox prefHeight="86.0" prefWidth="228.0">
         <children>
            <TableView fx:id="filesTable" prefHeight="127.0" prefWidth="228.0">
              <!--<columns>-->
                <!--<TableColumn prefWidth="75.0"  />-->
                <!--<TableColumn prefWidth="75.0"  />-->
              <!--</columns>-->
            </TableView>
         </children>
      </VBox>
      <VBox VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
         <children>
            <HBox fx:id="hboxStatus" spacing="10.0">
               <children>
                  <ProgressBar fx:id="piStatus" prefWidth="150.0" progress="0.0" />
                  <Label fx:id="lblStatus" text="Label" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
